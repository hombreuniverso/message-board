<!--Delete USER confirmation message page-->

<!DOCTYPE html>
<html lang="en">
  <!--Header Template-->
  <%- include('./partials/header.ejs') %>

  <body>
    <!--Nav Template-->
    <div class="display-container">
      <h1><%= title %></h1>
      <div class="nav-container"><%- include('./partials/navbar.ejs') %></div>
      <div class="message-container">
        <p><%= message %></p>
      </div>
      <div class="button-container">
        <div class="yes-button-container">
          <form action="" method="post">
            <button id="yes-btn" type="submit">Yes</button>
          </form>
        </div>

        <div class="no-button-container">
          <form action="/" method="get">
            <button type="submit">No</button>
          </form>
        </div>
      </div>
    </div>
    <!--Footer Template-->
    <%- include('./partials/footer.ejs') %>
    <script>
      const yesBtn = document.querySelectorAll("#yes-btn");
      const form = document.querySelector("form");

      yesBtn.forEach((button) => {
        button.addEventListener("click", (e) => {
          form.action = `/deleteUserMessage${window.location.search}`;
          
        });
      });
    </script>
  </body>
</html>
